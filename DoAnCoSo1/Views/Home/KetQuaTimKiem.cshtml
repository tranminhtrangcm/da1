            </div>
            @if (sanPham.KhuyenMai != null)
            {
                strGia = AppHelper.FormatMoney(sanPham.KhuyenMai.SoTienGiam);
<label class="discount1">Giảm @Html.DisplayFor(modelItem => strGia)</label>}
        </a>
    </li>}
                </ul>}
</div>
